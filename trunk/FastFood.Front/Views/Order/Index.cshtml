@model IEnumerable<FastFood.Core.Models.OrderModel>

@{
    ViewBag.Title = "Index";
}

<h2>Client orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Id
        </th>
        <th>
            Description
        </th>
        <th>
            DateOrdered
        </th>
        <th>
            Status
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
        <td>
            @item.Id
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @String.Format("{0:g}", item.DateOrdered)
        </td>
        <td>
            @item.Status.ToString()
        </td>
    </tr>
}

</table>

