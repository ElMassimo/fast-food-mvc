@{
    ViewBag.Title = "Food Express";
    if(ViewBag.IsAdmin)
    {
        ViewBag.Subtitle = "Quick relief for really hungry people";
    }
    else   
    {
        ViewBag.Subtitle = "Administrative site";
    }
}
<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.PageTitle - @ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/favicon_small.ico")"/>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.2.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <div class="center">
            <span>                
                @Html.Partial("_LoginPartial")
            </span>
        </div>
    </div>
    <div class="page">
        <header>            
            <div id="title" class="left-container">            
                <a href="@Url.Action("Index", "Home", new { area = ""})">
                    <div class="left-container">
                        <img src="@Url.Content("~/Content/Images/logo.png")" border="0" alt="logo" />      
                    </div>            
                    <div class="right-container">   
                            <h1>@ViewBag.Title</h1>
                            <h2>@ViewBag.Subtitle</h2>
                    </div>                  
                </a>              
            </div>
            <div id="menucontainer">            
                <ul id="menu">                                       
                    <li>@Html.ActionLink("Home", "Index", new { controller = "Home" }, new { id = "home" })</li>
                    @if(!ViewBag.IsAdmin)
                    {       
                        <li>@Html.ActionLink("My orders", "Index", new { controller = "Order" }, new { id = "orders" })</li>
                    }
                    <li>@Html.ActionLink("Restaurants", "Index", new { controller = "Restaurant" }, new { id = "restaurants" })</li>
                    <li>@Html.ActionLink("About", "About", new { controller = "Home" }, new { id = "about" })</li>
                </ul>
            </div>     
        </header>
        <div id="main">
            @RenderBody()                    
        </div>
        <footer>
            Copyright &copy; 2011 <a style="color:#000;font-weight:bolder;" href='mailto:maximomussini@hotmail.com'>Máximo Mussini</a>
        </footer>
    </div>
</body>
</html>
